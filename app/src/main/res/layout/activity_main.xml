<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.example.tejas.calculator.MainActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:background="#021638"

    >
    <TextView
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="Text goes here"
        android:textColor="#FFFFFF"
        android:gravity="bottom|right"
        android:padding="10dp"

        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:background="#021638"

        >

        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/square"
            android:text="x^2"
            android:textSize="20sp"
            android:background="#021638"
            android:textColor="#FFFFFF"
            android:onClick="addNum"
            />
        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/squareRoot"
            android:text="√"
            android:textSize="20sp"
            android:background="#021638"
            android:textColor="#FFFFFF"
            android:onClick="addNum"
            />
        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/backspace"
            android:text="←"
            android:textSize="30sp"
            android:background="#021638"
            android:textColor="#FFFFFF"
            android:onClick="addNum"
            />
        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/divide"
            android:text="/"
            android:textSize="20sp"
            android:background="#021638"
            android:textColor="#FFFFFF"
            android:onClick="addNum"
            />
        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/seven"
            android:text="7"
            android:textSize="20sp"
            android:background="#021638"
            android:textColor="#FFFFFF"
            android:onClick="addNum"
            />
        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/eight"
            android:text="8"
            android:textSize="20sp"
            android:background="#021638"
            android:textColor="#FFFFFF"
            android:onClick="addNum"
            />
        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/nine"
            android:text="9"
            android:textSize="20sp"
            android:background="#021638"
            android:textColor="#FFFFFF"
            android:onClick="addNum"
            />
        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/multiply"
            android:text="*"
            android:textSize="20sp"
            android:background="#021638"
            android:textColor="#FFFFFF"
            android:onClick="addNum"
            />
        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/four"
            android:text="4"
            android:textSize="20sp"
            android:background="#021638"
            android:textColor="#FFFFFF"
            android:onClick="addNum"/>
        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/five"
            android:text="5"
            android:textSize="20sp"
            android:background="#021638"
            android:textColor="#FFFFFF"
            android:onClick="addNum"
            />
        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/six"
            android:text="6"
            android:textSize="20sp"
            android:background="#021638"
            android:textColor="#FFFFFF"
            android:onClick="addNum"
            />
        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/add"
            android:text="+"
            android:textSize="20sp"
            android:background="#021638"
            android:textColor="#FFFFFF"
            android:onClick="addNum"
            />
        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/one"
            android:text="1"
            android:textSize="20sp"
            android:background="#021638"
            android:textColor="#FFFFFF"
            android:onClick="addNum"
            />
        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/two"
            android:text="2"
            android:textSize="20sp"
            android:background="#021638"
            android:textColor="#FFFFFF"
            android:onClick="addNum"
            />
        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/three"
            android:text="3"
            android:textSize="20sp"
            android:background="#021638"
            android:textColor="#FFFFFF"
            android:onClick="addNum"
            />
        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/subtract"
            android:text="-"
            android:textSize="20sp"
            android:background="#021638"
            android:textColor="#FFFFFF"
            android:onClick="addNum"
            />
        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/clear"
            android:text="C"
            android:textSize="20sp"
            android:background="#021638"
            android:textColor="#FFFFFF"
            android:onClick="addNum"
            />
        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/zero"
            android:text="0"
            android:textSize="20sp"
            android:background="#021638"
            android:textColor="#FFFFFF"
            android:onClick="addNum"
            />
        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/decimal"
            android:text="."
            android:textSize="30sp"
            android:background="#021638"
            android:textColor="#FFFFFF"
            android:onClick="addNum"
            />
        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/equal"
            android:text="="
            android:textSize="20sp"
            android:background="#021638"
            android:textColor="#FFFFFF"
            android:onClick="addNum"
            />



    </GridLayout>


</LinearLayout>


